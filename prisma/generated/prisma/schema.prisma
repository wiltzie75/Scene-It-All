generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Movie {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  image       String
  year        Int?
  genre       String?
  rating      Float?
  reviews     Review[]
}

model Review {
  id        Int       @id @default(autoincrement())
  content   String
  rating    Float
  movie     Movie     @relation(fields: [movieId], references: [id])
  movieId   Int
  createdAt DateTime  @default(now())
  comments  Comment[]
}

model Comment {
  id        Int      @id @default(autoincrement())
  content   String
  createdAt DateTime @default(now())
  review    Review   @relation(fields: [reviewId], references: [id])
  reviewId  Int
}

model User {
  id        Int     @id @default(autoincrement())
  firstName String
  lastName  String
  email     String  @unique
  password  String
  isAdmin   Boolean @default(false)
}
